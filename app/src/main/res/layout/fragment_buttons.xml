<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentButtons"
    android:id="@+id/fragment_buttons"
    android:orientation="vertical"
    android:background="@drawable/stroke">


    <EditText
        android:id="@+id/edit_text_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Time" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:textColor="@color/selector_white_text"
        android:text="@string/time"></Button>

    <TextView
        android:id="@+id/text_view_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_data"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Enter Date" />

    <Button
        android:id="@+id/btn_data"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/background"
        android:textColor="@color/selector_white_text"
        android:text="Get Date" />
    <TextView
        android:id="@+id/text_view_data_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_data"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="16dp"/>


    <Button
        android:id="@+id/btn_alarm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stroke"
        android:textColor="@color/selector_purple_text"
        android:text="@string/alarm"></Button>

</FrameLayout>